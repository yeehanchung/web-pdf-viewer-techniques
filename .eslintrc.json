{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "next/core-web-vitals",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        // https://blog.logrocket.com/using-prettier-eslint-automate-formatting-fixing-javascript/
        // To prevent conflicts
        "prettier/prettier": [
            "error",
            {
                "tabWidth": 4,
                "semi": false,
                "singleQuote": false,
                "endOfLine": "auto",
                "bracketSpacing": true,
                "bracketSameLine": true,
                "printWidth": 80,
                "trailingComma": "none",
                "htmlWhitespaceSensitivity": "ignore",
                "arrowParens": "always",
                "proseWrap": "never",
                "whitespace": "strict",
                "singleAttributePerLine": false
            },
            {
                "usePrettierrc": false
            }
        ],
        "no-unused-vars": [0]
    }
}
